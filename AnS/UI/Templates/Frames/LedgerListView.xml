<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Frame name="AnsLedgerListViewTemplate" virtual="true">
        <Size x="600" y="316" />
        <Anchors>
            <Anchor point="TOPLEFT" x="158" y="-32" />
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture file="Interface\Buttons\WHITE8X8" horizTile="true" vertTile="true">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="0" y="0" />
                    </Anchors>
                    <Size x="600" y="310" />
                    <Color r="1" g="1" b="1" a="0.03" />
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Frame name="$parentStats">
                <Size x="600" y="16" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" x="0" y="0" />
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                         <FontString name="$parentTotal" text="" inherits="AnsGameFontWhiteTrans" justifyH="RIGHT">
                            <Size x="200" y="16" />
                            <Anchors>
                                <Anchor point="RIGHT" x="-206" y="0" />
                            </Anchors>
                        </FontString>
                        <FontString name="$parentTotalItems" text="" inherits="AnsGameFontWhiteTrans" justifyH="RIGHT">
                            <Size x="200" y="16" />
                            <Anchors>
                                <Anchor point="RIGHT" x="-6" y="0" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <Frame parentKey="Header" name="$parentHeader" inherits="AnsRecordsHeadingFullTemplate">
                <Size x="600" y="16" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="0" />
                </Anchors>
            </Frame>

            <ScrollFrame parentKey="ScrollFrame" name="$parentListView" inherits="AnsFauxScrollFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentHeader" relativePoint="BOTTOMLEFT" x="0" y="-4" />
                </Anchors>
                <Size x="600" y="290" />
            </ScrollFrame>
        </Frames>
    </Frame>
</Ui>