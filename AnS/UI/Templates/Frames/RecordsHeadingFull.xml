<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Frame name="AnsRecordsHeadingFullTemplate" virtual="true">
        <Layers>
            <Layer level="ARTWORK">
                <Texture file="Interface\Buttons\WHITE8X8" horizTile="true">
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" x="0" y="-4" />
                        <Anchor point="BOTTOMRIGHT" x="0" y="-4" />
                    </Anchors>
                    <Size y="0.5" />
                    <Color r="1" g="1" b="1" a="0.25" />
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentName" justifyH="LEFT" text="Item" inherits="AnsTab2Template">
                <Size x="128" y="16" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="6" y="-4" />
                </Anchors>
                <Scripts>
                    <OnClick>
                        if (self:GetParent().dataProvider) then
                            self:GetParent().dataProvider:Sort("item");
                        end
                    </OnClick>
                </Scripts>
            </Button>
            <Button name="$parentWho" justifyH="LEFT" text="Player" inherits="AnsTab2Template">
                <Size x="100" y="16" />
                <Anchors>
                    <Anchor point="LEFT" x="0" y="0" relativeTo="$parentName" relativePoint="RIGHT" />
                </Anchors>
                <Scripts>
                    <OnClick>
                        if (self:GetParent().dataProvider) then
                            self:GetParent().dataProvider:Sort("from");
                        end
                    </OnClick>
                </Scripts>
            </Button>
            <Button name="$parentType" justifyH="LEFT" text="Type" inherits="AnsTab2Template">
                <Size x="64" y="16" />
                <Anchors>
                    <Anchor point="LEFT"  x="0" y="0" relativeTo="$parentWho" relativePoint="RIGHT" />
                </Anchors>

                <Scripts>
                    <OnClick>
                        if (self:GetParent().dataProvider) then
                            self:GetParent().dataProvider:Sort("type");
                        end
                    </OnClick>
                </Scripts>
            </Button>
            <Button name="$parentStack" text="Count" inherits="AnsTableHeaderRightTemplate">
                <Size x="86" y="16" />
                <Anchors>
                    <Anchor point="LEFT" x="0" y="0" relativeTo="$parentType" relativePoint="RIGHT" />
                </Anchors>
                <Scripts>
                    <OnClick>
                        if (self:GetParent().dataProvider) then
                            self:GetParent().dataProvider:Sort("quantity");
                        end
                    </OnClick>
                </Scripts>
            </Button>
            <Button name="$parentDate" text="Date" inherits="AnsTableHeaderRightTemplate">
                <Size x="100" y="16" />
                <Anchors>
                    <Anchor point="RIGHT" x="-6" y="-4" />
                </Anchors>
                <Scripts>
                    <OnClick>
                        if (self:GetParent().dataProvider) then
                            self:GetParent().dataProvider:Sort("time");
                        end
                    </OnClick>
                </Scripts>
            </Button>
            <Button name="$parentAmount" text="PPU" inherits="AnsTableHeaderRightTemplate">
                <Size x="100" y="16" />
                <Anchors>
                    <Anchor point="RIGHT" relativeTo="$parentDate" x="0" y="0" relativePoint="LEFT" />
                </Anchors>
                <Scripts>
                    <OnClick>
                        if (self:GetParent().dataProvider) then
                            self:GetParent().dataProvider:Sort("copper");
                        end
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
</Ui>