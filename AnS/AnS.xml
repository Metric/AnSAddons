            <OnEvent>AnsCore:EventHandler(self, event, ... );</OnEvent>
            <OnShow>
                AnsCore.Window:OnShow();
            </OnShow>
            <OnHide>
                AnsCore.Window:OnHide();
            </OnHide>
            <OnDragStart>
                self:StartMoving();
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing();
