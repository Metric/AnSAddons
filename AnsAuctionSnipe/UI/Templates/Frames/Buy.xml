<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Frame name="AnsSnipeBuyTemplate" virtual="true">
        <Anchors>
            <Anchor point="TOPLEFT" x="0" y="0"/>
            <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
        </Anchors>

        <Frames>
            <Frame name="$parentSearchBar">
                <Size x="605" y="22" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="190" y="-55" />
                </Anchors>
                <Frames>
                    <EditBox name="$parentSearch" autoFocus="false" inherits="InputBoxTemplate" bytes="63">
                        <Size x="100" y="20"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" x="0" y="0"/>
                        </Anchors>
                        <FontString inherits="ChatFontNormal" />

                        <Layers>
                            <Layer level="ARTWORK">
								<FontString inherits="GameFontHighlight" text="Name Filter" justifyH="RIGHT">
									<Anchors>
										<Anchor point="LEFT" relativePoint="LEFT" x="0" y="15"/>
									</Anchors>
								</FontString>
							</Layer>
                        </Layers>

                        <Scripts>
                            <OnEnterPressed>
                                self:ClearFocus();
                            </OnEnterPressed>
                            <OnEscapePressed>
                                self:ClearFocus();
                            </OnEscapePressed>
                        </Scripts>
                    </EditBox>

                    <EditBox name="$parentMaxPercent" autoFocus="false" numeric="true" bytes="4" inherits="InputBoxTemplate">
                        <Size x="48" y="20" />
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="$parentSearch" relativePoint="LEFT" x="-15" y="0" />
                        </Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
								<FontString inherits="GameFontHighlight" text="Max %" justifyH="RIGHT">
									<Anchors>
										<Anchor point="LEFT" relativePoint="LEFT" x="0" y="15"/>
									</Anchors>
								</FontString>
							</Layer>
                        </Layers>
                        <Scripts>
                            <OnEnterPressed>
                                self:ClearFocus();
                            </OnEnterPressed>
                            <OnEscapePressed>
                                self:ClearFocus();
                            </OnEscapePressed>
                        </Scripts>
                    </EditBox>

                    <Frame name="$parentMaxPPU" inherits="MoneyInputFrameTemplate">
                        <Anchors>
                            <Anchor point="LEFT" relativeTo="$parentSearch" relativePoint="RIGHT" x="10" y="0" />
                        </Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
                                <FontString inherits="GameFontHighlight" text="Max PPU" justifyH="RIGHT">
									<Anchors>
										<Anchor point="LEFT" relativePoint="LEFT" x="0" y="15"/>
									</Anchors>
								</FontString>
                            </Layer>
                        </Layers>
                    </Frame>

                    <EditBox name="$parentMinLevel" letters="3" numeric="true" autoFocus="false" inherits="InputBoxTemplate">
                        <Size x="32" y="24" />
                        <Anchors>
							<Anchor point="LEFT" relativeTo="$parentMaxPPU" relativePoint="RIGHT" x="10" y="0"/>
						</Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
								<FontString inherits="GameFontHighlight" text="Min iLevel" justifyH="RIGHT">
									<Anchors>
										<Anchor point="LEFT" relativePoint="LEFT" x="0" y="15"/>
									</Anchors>
								</FontString>
							</Layer>
                        </Layers>
                        <Scripts>
                            <OnEnterPressed>
                                self:ClearFocus();
                            </OnEnterPressed>
                            <OnEscapePressed>
                                self:ClearFocus();
                            </OnEscapePressed>
                        </Scripts>
                    </EditBox>

                    <Frame name="$parentQuality" inherits="UIDropDownMenuTemplate">
                        <Size x="100" y="32" />
                        <Anchors>
                            <Anchor point="LEFT" relativeTo="$parentMinLevel" relativePoint="RIGHT" x="20" y="0" />
                        </Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
								<FontString inherits="GameFontHighlight" text="Min Quality" justifyH="RIGHT">
									<Anchors>
										<Anchor point="LEFT" relativePoint="LEFT" x="24" y="15"/>
									</Anchors>
								</FontString>
							</Layer>
                        </Layers>
                    </Frame>

                    <EditBox name="$parentMinSize" letters="4" numeric="true" autoFocus="false" inherits="InputBoxTemplate">
                        <Size x="64" y="24" />
                        <Anchors>
							<Anchor point="LEFT" relativeTo="$parentQuality" relativePoint="RIGHT" x="65" y="0"/>
						</Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
								<FontString inherits="GameFontHighlight" text="Min Stack Size" justifyH="RIGHT">
									<Anchors>
										<Anchor point="LEFT" relativePoint="LEFT" x="0" y="15" />
									</Anchors>
								</FontString>
							</Layer>
                        </Layers>
                        <Scripts>
                            <OnEnterPressed>
                                self:ClearFocus();
                            </OnEnterPressed>
                            <OnEscapePressed>
                                self:ClearFocus();
                            </OnEscapePressed>
                        </Scripts>
                    </EditBox>
                    <CheckButton inherits="UIRadioButtonTemplate" name="$parentDingSound">
                        <Anchors>
                            <Anchor point="TOPLEFT"  relativePoint="BOTTOMLEFT" relativeTo="$parentMinSize" x="-2" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnLoad>_G[self:GetName().."Text"]:SetText("Ding Sound");</OnLoad>
                            <OnClick>AuctionSnipe:DingSound(self)</OnClick>
                        </Scripts>
                    </CheckButton>
                    <EditBox name="$parentGlobalFilter" autoFocus="false" inherits="InputBoxTemplate">
                        <Size x="220" y="24" />
                        <Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentSearch" relativePoint="BOTTOMLEFT" x="120" y="0"/>
						</Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
								<FontString inherits="GameFontHighlight" text="Global Filter String" justifyH="RIGHT">
									<Anchors>
										<Anchor point="LEFT" relativePoint="LEFT" x="-120" y="0"/>
									</Anchors>
								</FontString>
							</Layer>
                        </Layers>
                        <Scripts>
                            <OnShow>
                                self:SetText(ANS_GLOBAL_SETTINGS.pricingFn);
                            </OnShow>
                            <OnTextChanged>
                                AnsConfig:Edit(self, "pricing");
                            </OnTextChanged>
                            <OnEnterPressed>
                                self:ClearFocus();
                            </OnEnterPressed>
                            <OnEscapePressed>
                                self:ClearFocus();
                            </OnEscapePressed>
                        </Scripts>
                    </EditBox>
                </Frames>
            </Frame>

            <Frame name="$parentBottomBar">
                <Size x="160" y="22" />
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-50" y="15" />
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentStatus" text="Page: 0 - Stopped..." justifyH="CENTER" inherits="GameFontHighlightSmall">
                            <Anchors>
                                <Anchor point="RIGHT" relativePoint="LEFT" x="-50" y="0" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <Button name="$parentStart" text="Start" inherits="UIPanelButtonTemplate">
                        <Size x="78" y="22" />
                        <Anchors>
                            <Anchor point="RIGHT" relativePoint="RIGHT" x="0" y="0"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                AuctionSnipe:Start();
                            </OnClick>
                        </Scripts>
                    </Button>

                    <Button name="$parentStop" text="Stop" inherits="UIPanelButtonTemplate">
                        <Size x="78" y="22" />
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="$parentStart" relativePoint="LEFT" x="-5" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                AuctionSnipe:Stop();
                            </OnClick>
                        </Scripts>
                    </Button>
                </Frames>
            </Frame>

            <Frame name="$parentHeader">
                <Size x="630" y="64" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentSearchBar" relativePoint="BOTTOMLEFT"  x="0" y="-10" />
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture name="$parentMiddle" file="Interface\Glues\CharacterCreate\CharacterCreate-LabelFrame">
                            <Size x="605" y="64" />
                            <TexCoords left="0.2" right="0.8" top="0" bottom="1" />
                        </Texture>
                    </Layer>
                </Layers>
                <Frames>
                    <Button name="$parentPrice" text="PPU" inherits="AnsAuctionHeadingTemplate">
                        <Size x="100" y="20" />
                        <Anchors>
                            <Anchor point="TOPLEFT" x="0" y="-21"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>AuctionSnipe:SortByPrice()</OnClick>
                        </Scripts>
                    </Button>
                    <Button name="$parentName" text="Name" inherits="AnsAuctionHeadingTemplate">
                        <Size x="108" y="20"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="$parentPrice" relativePoint="TOPRIGHT" x="60" y="0"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>AuctionSnipe:SortByName()</OnClick>
                        </Scripts>
                    </Button>
                    <Button name="$parentPercent" text="Percent %" inherits="AnsAuctionHeadingTemplate">
                        <Size x="70" y="20"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="$parentName" relativePoint="TOPRIGHT" x="100" y="0"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>AuctionSnipe:SortByPercent()</OnClick>
                        </Scripts>
                    </Button>
                    <Button name="$parentLevel" text="iLvL" inherits="AnsAuctionHeadingTemplate">
                        <Size x="50" y="20" />
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="$parentPercent" relativePoint="TOPRIGHT" x="10" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                AuctionSnipe:SortByILevel()
                            </OnClick>
                        </Scripts>
                    </Button>
                </Frames>
            </Frame>

            <ScrollFrame name="$parentItems" inherits="FauxScrollFrameTemplate">
                <Size x="605" y="256"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentHeader" relativePoint="BOTTOMLEFT"  x="0" y="10"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture file="Interface\PaperDollInfoFrame\UI-Character-ScrollBar">
                            <Size x="31" y="256"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="-2" y="5"/>
                            </Anchors>
                            <TexCoords left="0" right="0.484375" top="0" bottom="1.0"/>
                        </Texture>
                        <Texture file="Interface\PaperDollInfoFrame\UI-Character-ScrollBar">
                            <Size x="31" y="106" />
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="-2" y="-2" />
                            </Anchors>
                            <TexCoords left="0.515625" right="1.0" top="0" bottom="0.4140625"/>
                        </Texture>
                    </Layer>
                </Layers>
            </ScrollFrame>

            <ScrollFrame name="$parentTreeView" inherits="FauxScrollFrameTemplate">
                <Size x="138" y="305" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="22" y="-105"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture file="Interface\PaperDollInfoFrame\UI-Character-ScrollBar">
                            <Size x="31" y="256"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="-2" y="5"/>
                            </Anchors>
                            <TexCoords left="0" right="0.484375" top="0" bottom="1.0"/>
                        </Texture>
                        <Texture file="Interface\PaperDollInfoFrame\UI-Character-ScrollBar">
                            <Size x="31" y="106"/>
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="-2" y="-2"/>
                            </Anchors>
                            <TexCoords left="0.515625" right="1.0" top="0" bottom="0.4140625"/>
                        </Texture>
                    </Layer>
                </Layers>
            </ScrollFrame>
            <Button name="$parentReset" text="Reset" inherits="UIPanelButtonTemplate">
                <Size x="52" y="22" />
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="52" y="8" relativeTo="$parentTreeView" relativePoint="TOPLEFT" />
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString name="$parentLabel" inherits="GameFontHighlight" text="Filters">
                            <Anchors><Anchor point="BOTTOMLEFT" x="-45" y="5"/></Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnClick>
                        AuctionSnipe:ClearFilters();
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
</Ui>