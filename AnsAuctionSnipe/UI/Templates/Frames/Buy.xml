                 <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="Background" atlas="auctionhouse-background-categories" useAtlasSize="true">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="3" y="-3"/>
                                <Anchor point="BOTTOMRIGHT" x="-3" y="3" />
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
    </Frame>
</Ui>