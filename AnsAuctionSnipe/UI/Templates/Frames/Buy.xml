<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Frame name="AnsSnipeBuyTemplate" virtual="true">
        <Anchors>
            <Anchor point="TOPLEFT" x="0" y="0"/>
            <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
        </Anchors>

        <Frames>
            <Frame name="$parentSearchBar">
                <Size x="605" y="22" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="190" y="-55" />
                </Anchors>
                <Frames>
                    <EditBox name="$parentSearch" autoFocus="false" inherits="InputBoxTemplate" bytes="63">
                        <Size x="100" y="20"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" x="0" y="0"/>
                        </Anchors>
                        <FontString inherits="ChatFontNormal" />

                        <Layers>
                            <Layer level="ARTWORK">
								<FontString inherits="GameFontHighlight" text="Name Filter" justifyH="RIGHT">
									<Anchors>
										<Anchor point="LEFT" relativePoint="LEFT" x="0" y="15"/>
									</Anchors>
								</FontString>
							</Layer>
                        </Layers>

                        <Scripts>
                            <OnEnterPressed>
                                self:ClearFocus();
                            </OnEnterPressed>
                            <OnEscapePressed>
                                self:ClearFocus();
                            </OnEscapePressed>
                        </Scripts>
                    </EditBox>

                    <EditBox name="$parentMaxPercent" autoFocus="false" numeric="true" bytes="6" inherits="InputBoxTemplate">
                        <Size x="48" y="20" />
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="$parentSearch" relativePoint="LEFT" x="-15" y="0" />
                        </Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
								<FontString inherits="GameFontHighlight" text="Max %" justifyH="RIGHT">
									<Anchors>
										<Anchor point="LEFT" relativePoint="LEFT" x="0" y="15"/>
									</Anchors>
								</FontString>
							</Layer>
                        </Layers>
                        <Scripts>
                            <OnEnterPressed>
                                self:ClearFocus();
                            </OnEnterPressed>
                            <OnEscapePressed>
                                self:ClearFocus();
                            </OnEscapePressed>
                        </Scripts>
                    </EditBox>

                    <Frame name="$parentMaxPPU" inherits="MoneyInputFrameTemplate">
                        <Anchors>
                            <Anchor point="LEFT" relativeTo="$parentSearch" relativePoint="RIGHT" x="10" y="0" />
                        </Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
                                <FontString inherits="GameFontHighlight" text="Max PPU" justifyH="RIGHT">
									<Anchors>
										<Anchor point="LEFT" relativePoint="LEFT" x="0" y="15"/>
									</Anchors>
								</FontString>
                            </Layer>
                        </Layers>
                    </Frame>

                    <EditBox name="$parentMinLevel" letters="3" numeric="true" autoFocus="false" inherits="InputBoxTemplate">
                        <Size x="32" y="24" />
                        <Anchors>
							<Anchor point="LEFT" relativeTo="$parentMaxPPU" relativePoint="RIGHT" x="10" y="0"/>
						</Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
								<FontString inherits="GameFontHighlight" text="Min iLevel" justifyH="RIGHT">
									<Anchors>
										<Anchor point="LEFT" relativePoint="LEFT" x="0" y="15"/>
									</Anchors>
								</FontString>
							</Layer>
                        </Layers>
                        <Scripts>
                            <OnEnterPressed>
                                self:ClearFocus();
                            </OnEnterPressed>
                            <OnEscapePressed>
                                self:ClearFocus();
                            </OnEscapePressed>
                        </Scripts>
                    </EditBox>

                    <Frame name="$parentQuality" inherits="UIDropDownMenuTemplate">
                        <Size x="100" y="32" />
                        <Anchors>
                            <Anchor point="LEFT" relativeTo="$parentMinLevel" relativePoint="RIGHT" x="20" y="0" />
                        </Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
								<FontString inherits="GameFontHighlight" text="Min Quality" justifyH="RIGHT">
									<Anchors>
										<Anchor point="LEFT" relativePoint="LEFT" x="24" y="15"/>
									</Anchors>
								</FontString>
							</Layer>
                        </Layers>
                    </Frame>

                    <EditBox name="$parentLevelRange" text="0-120" letters="7" numeric="false" autoFocus="false" inherits="InputBoxTemplate">
                        <Size x="64" y="24" />
                        <Anchors>
							<Anchor point="LEFT" relativeTo="$parentQuality" relativePoint="RIGHT" x="65" y="0"/>
						</Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
								<FontString inherits="GameFontHighlight" text="CLevel Range" justifyH="RIGHT">
									<Anchors>
										<Anchor point="LEFT" relativePoint="LEFT" x="0" y="15" />
									</Anchors>
								</FontString>
							</Layer>
                        </Layers>
                        <Scripts>
                            <OnEnterPressed>
                                self:ClearFocus();
                            </OnEnterPressed>
                            <OnEscapePressed>
                                self:ClearFocus();
                            </OnEscapePressed>
                        </Scripts>
                    </EditBox>
                    <CheckButton inherits="UIRadioButtonTemplate" name="$parentDingSound">
                        <Anchors>
                            <Anchor point="TOPLEFT"  relativePoint="BOTTOMLEFT" relativeTo="$parentLevelRange" x="-2" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnLoad>_G[self:GetName().."Text"]:SetText("Ding Sound");</OnLoad>
                            <OnClick>AuctionSnipe:DingSound(self)</OnClick>
                        </Scripts>
                    </CheckButton>
                    <EditBox name="$parentGlobalFilter" autoFocus="false" inherits="InputBoxTemplate">
                        <Size x="220" y="24" />
                        <Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentSearch" relativePoint="BOTTOMLEFT" x="120" y="0"/>
						</Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
								<FontString inherits="GameFontHighlight" text="Global Filter String" justifyH="RIGHT">
									<Anchors>
										<Anchor point="LEFT" relativePoint="LEFT" x="-120" y="0"/>
									</Anchors>
								</FontString>
							</Layer>
                        </Layers>
                        <Scripts>
                            <OnShow>
                                self:SetText(ANS_GLOBAL_SETTINGS.pricingFn);
                            </OnShow>
                            <OnTextChanged>
                                AnsConfig:Edit(self, "pricing");
                            </OnTextChanged>
                            <OnEnterPressed>
                                self:ClearFocus();
                            </OnEnterPressed>
                            <OnEscapePressed>
                                self:ClearFocus();
                            </OnEscapePressed>
                        </Scripts>
                    </EditBox>
                </Frames>
            </Frame>

            <Frame name="$parentBottomBar">
                <Size x="160" y="22" />
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-74" y="4" />
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentStatus" text="Stopped" justifyH="CENTER" inherits="GameFontHighlightSmall">
                            <Anchors>
                                <Anchor point="RIGHT" relativePoint="LEFT" x="-50" y="0" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <Button name="$parentStart" text="Start" inherits="UIPanelButtonTemplate">
                        <Size x="78" y="22" />
                        <Anchors>
                            <Anchor point="RIGHT" relativePoint="RIGHT" x="-40" y="0"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                AuctionSnipe:Start();
                            </OnClick>
                        </Scripts>
                    </Button>

                    <Button name="$parentStop" text="Stop" inherits="UIPanelButtonTemplate">
                        <Size x="78" y="22" />
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="$parentStart" relativePoint="LEFT" x="0" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                AuctionSnipe:Stop();
                            </OnClick>
                        </Scripts>
                    </Button>
                </Frames>
            </Frame>

            <Frame name="$parentHeader">
                <size y="20" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="172" y="-100" />
                    <Anchor point="RIGHT" x="-4" />
                </Anchors>
                <Frames>
                    <Button name="$parentPrice" text="PPU" inherits="AnsAuctionHeadingTemplate">
                        <Size x="100" y="20" />
                        <Anchors>
                            <Anchor point="TOPLEFT" x="0" y="0"/>
                        </Anchors>
                    </Button>
                    <Button name="$parentName" text="Name" inherits="AnsAuctionHeadingTemplate">
                        <Size x="108" y="20"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="$parentPrice" relativePoint="TOPRIGHT" x="60" y="0"/>
                        </Anchors>
                    </Button>
                    <Button name="$parentPercent" text="Percent %" inherits="AnsAuctionHeadingTemplate">
                        <Size x="70" y="20"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="$parentName" relativePoint="TOPRIGHT" x="100" y="0"/>
                        </Anchors>
                    </Button>
                    <Button name="$parentLevel" text="iLvL" inherits="AnsAuctionHeadingTemplate">
                        <Size x="50" y="20" />
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="$parentPercent" relativePoint="TOPRIGHT" x="10" y="0" />
                        </Anchors>
                    </Button>
                </Frames>
            </Frame>

            <Frame name="$parentResults" inherits="AuctionHouseBackgroundTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentHeader" relativePoint="BOTTOMLEFT" x="0" y="0" />
                    <Anchor point="BOTTOMRIGHT" x="-4" y="28" />
                </Anchors>
                <KeyValues>         
                    <KeyValue key="layoutType" value="InsetFrameTemplate" type="string"/>
                    <KeyValue key="backgroundYOffset" value="-4" type="number"/>
                </KeyValues>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture atlas="auctionhouse-background-index" useAtlasSize="true">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="0" y="-4" />
                                <Anchor point="BOTTOMRIGHT" x="0" y="0" />
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnLoad>
                        AuctionHouseBackgroundMixin.OnLoad(self);
                        self.NineSlice:SetPoint("BOTTOMRIGHT", -22, 0);
                    </OnLoad>
                </Scripts>
                <Frames>
                    <ScrollFrame name="$parentItems" inherits="FauxScrollFrameTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" x="0" y="-6" />
                            <Anchor point="BOTTOMRIGHT" x="-22" y="3" />
                        </Anchors>
                        <Layers>
                             <Layer level="BORDER">
                                <Texture parentKey="scrollBorderTop" file="Interface\PaperDollInfoFrame\UI-Character-ScrollBar">
                                    <Size x="28" y="48"/>
                                    <Anchors>
                                        <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="28" y="4"/>
                                    </Anchors>
                                    <TexCoords left="0" right="0.484375" top="0" bottom="0.2"/>
                                </Texture>
                                <Texture parentKey="scrollBorderBottom" file="Interface\PaperDollInfoFrame\UI-Character-ScrollBar">
                                    <Size x="28" y="67"/>
                                    <Anchors>
                                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="28" y="-2"/>
                                    </Anchors>
                                    <TexCoords left="0.515625" right="1.0" top="0.1440625" bottom="0.4140625"/>
                                </Texture>
                                <Texture parentKey="scrollBorderMiddle" file="Interface\PaperDollInfoFrame\UI-Character-ScrollBar">
                                    <Anchors>
                                        <Anchor point="TOPLEFT" relativeKey="$parent.scrollBorderTop" relativePoint="BOTTOMLEFT"/>
                                        <Anchor point="BOTTOMRIGHT" relativeKey="$parent.scrollBorderBottom" relativePoint="TOPRIGHT"/>
                                    </Anchors>
                                    <TexCoords left="0" right="0.484375" top="0.1640625" bottom="1"/>
                                </Texture>
                            </Layer>
                            <Layer level="BACKGROUND">
                                <Texture parentKey="scrollFrameScrollBarBackground">
                                <Anchors>
                                    <Anchor point="TOPLEFT" relativeKey="$parent.scrollBorderTop" relativePoint="TOPLEFT"/>
                                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent.scrollBorderBottom" relativePoint="BOTTOMRIGHT"/>
                                </Anchors>
                                <Color r="0" g="0" b="0"/>
                                </Texture>
                            </Layer>
                        </Layers>
                    </ScrollFrame>
                </Frames>
            </Frame>

            <Frame name="$parentBaseList">
                <Size x="168" y="394" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="4" y="-120" />
                </Anchors>
                <Frames>
                    <Frame parentKey="NineSlice" useParentLevel="true" inherits="NineSlicePanelTemplate"/>
                    <ScrollFrame name="$parentTreeView" inherits="FauxScrollFrameTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" x="4" y="-4"/>
                            <Anchor point="BOTTOMRIGHT" x="-29" y="4"/>
                        </Anchors>
                        <Layers>
                            <Layer level="BORDER">
                                <Texture parentKey="scrollBorderTop" file="Interface\PaperDollInfoFrame\UI-Character-ScrollBar">
                                <Size x="28" y="48"/>
                                <Anchors>
                                    <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="28" y="4"/>
                                </Anchors>
                                <TexCoords left="0" right="0.484375" top="0" bottom="0.2"/>
