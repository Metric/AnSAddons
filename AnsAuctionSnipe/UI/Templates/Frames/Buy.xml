                                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent.scrollBorderBottom" relativePoint="BOTTOMRIGHT"/>
                                </Anchors>
                                <Color r="0" g="0" b="0"/>
                                </Texture>
                            </Layer>
                        </Layers>
                    </ScrollFrame>
                    <Button name="$parentReset" text="Reset" inherits="UIPanelButtonTemplate">
                        <Size x="52" y="22" />
                        <Anchors>
                            <Anchor point="BOTTOMLEFT" x="0" y="8" relativeTo="$parentTreeView" relativePoint="TOPLEFT" />
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                AuctionSnipe:ClearBase();
                            </OnClick>
                        </Scripts>
                    </Button>
                </Frames>
                 <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="Background" atlas="auctionhouse-background-categories" useAtlasSize="true">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="3" y="-3"/>
                                <Anchor point="BOTTOMRIGHT" x="-3" y="3" />
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>

            <Frame name="$parentFilterList">
                <Size x="168" y="394" />
                <Anchors>
                    <Anchor point="TOPRIGHT" x="168" y="-120" />
                </Anchors>
                <Frames>
                    <Frame parentKey="NineSlice" useParentLevel="true" inherits="NineSlicePanelTemplate"/>
