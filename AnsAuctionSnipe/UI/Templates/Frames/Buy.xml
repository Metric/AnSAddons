                        <Size x="52" y="22" />
                        <Anchors>
                            <Anchor point="BOTTOMLEFT" x="0" y="8" relativeTo="$parentTreeView" relativePoint="TOPLEFT" />
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                AuctionSnipe:ClearFilters();
                            </OnClick>
                        </Scripts>
                    </Button>
