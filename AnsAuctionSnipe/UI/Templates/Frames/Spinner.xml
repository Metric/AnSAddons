
<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Frame name="SpinnerRetailTemplate" mixin="SpinnerMixin" virtual="true" enableMouse="true" hidden="true">
        <Anchors>
            <Anchor point="TOPLEFT"/>
            <Anchor point="BOTTOMRIGHT" />
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <FontString inherits="GameFontNormal" text="Purchasing...">
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="0" />
                    </Anchors>
                    <Color color="NORMAL_FONT_COLOR"/>
                    <Shadow>
                        <Offset>
                            <AbsDimension x="1" y="-1"/>
                        </Offset>
                        <Color r="0" g="0" b="0"/>
                    </Shadow>
                </FontString>
                <Texture>
                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                        <Anchor point="BOTTOMRIGHT" />
                    </Anchors>
                    <Color r="0" g="0" b="0" a="0.75" />
                </Texture>
                <Texture parentKey="LoadingSpinner" atlas="auctionhouse-ui-loadingspinner">
                    <Size x="146" y="146"/>
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="0"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Animations>
            <AnimationGroup parentKey="SpinnerAnim" looping="REPEAT">
                <Rotation childKey="LoadingSpinner" order="1" duration="1" degrees="-360"/>
            </AnimationGroup>
        </Animations>
        <Scripts>
            <OnLoad>
                self:Init();
            </OnLoad>
        </Scripts>
    </Frame>
